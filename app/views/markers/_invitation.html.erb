<div>
  <h3> Invitation Send</h3>
  <%= form_for(invitation, remote: true) do |f| %>
      <div class="row">
        <div class="col-md-2">
          To:
        </div>
        <div class="col-md-10">
          <%= f.text_field :send_to, class: 'text-field-design' %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          Body:
        </div>
        <div class="col-md-10">
          <%= f.text_area :email_body, class:"text-area-design" %>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.hidden_field :marker_id,value: trip.id %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 col-md-offset-4">
          <%= f.submit 'Invite' , class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
  <% end %>
</div>


<script type="text/javascript">
    $('.email-template-load').show();
  $("form").submit(function(e) {
        $('.email-template-load').hide();
    });

</script>